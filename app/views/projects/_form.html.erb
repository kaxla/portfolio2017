<%= form_for(@project) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.file_field :image_1, class: "choose-file-button"%>
    <%= f.file_field :image_2, class: "choose-file-button"%>
    <%= f.file_field :image_3, class: "choose-file-button"%>
    <%= f.file_field :image_4, class: "choose-file-button"%>
  </div>

  <div class="actions">
    <%= f.submit class: "submit-button" %>
  </div>
<% end %>
